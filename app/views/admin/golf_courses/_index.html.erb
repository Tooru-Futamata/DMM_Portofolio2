<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h2 class="index-title">ゴルフ場一覧</h2>
      <p>(全<%= golf_courses.count %>件)</p>
    </div>
    <div class="col-lg-4 text-right">
      <div class="btn-group dropright">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          地方で絞る
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <% regions.each do |region| %>
          　<%= link_to region.name, public_public_golfcourses_path(region_id: region.id), class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="btn-group dropright">
        <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          県名で絞る
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <% prefectures.each do |prefecture| %>
          　<%= link_to prefecture.name, public_public_golfcourses_path(prefecture_id: prefecture.id), class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% golf_courses.each do |golf_course| %>
      <div class="col-lg-3 flex p-2">
        <%= link_to public_public_golfcourse_path(golf_course.id) do %>
          <%= attachment_image_tag golf_course, :image, size: "200x150", fallback: "no_image.jpeg", class: "button grow" %><br>
        <% end %>
        <strong>
          <%= link_to public_public_golfcourse_path(golf_course.id) do %>
            <%= golf_course.name %>
          <% end %>
          </strong><br>
        <%= golf_course.prefecture.name %>
        <%= golf_course.address %>
      </div>
    <% end %>
  </div>

<div class= "paginate col-lg-3 mx-auto"><%= paginate @golf_courses %></div>
