<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
  <div class="row1">
    <h2 class="index-title">ゴルフ場新規登録</h2><br>
    <%= form_with model: @golf_course, url: admin_golf_courses_path, local:true do |f| %>
      <div class="form-group">
        <%= f.attachment_field :image, placeholder: "ゴルフ場画像" %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'ゴルフ場名' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :region_id, '地方' %>
        <%= f.collection_select(:region_id, Region.all, :id, :name) %>
      </div>
      <div class="form-group">
        <%= f.label :prefecture, '県名' %>
        <%= f.select :prefecture, GolfCourse.prefectures.keys, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, autofocus: true, autocomplete: '住所', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'ゴルフ場登録', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>